<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class='form-group'>
     <div class='control-label col-sm-2'>
        <%= f.label :name %>
     </div>
     <div class ="col-sm-8">
        <p>
           <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
        </p>
     </div>
  </div>
  <div class="form-group">
     <div class="col-sm-offset-2 col-sm-4" align=left>
        <p><%= f.submit class: 'btn btn-primary btn-lg' %></p>
     </div>
     <div class="col-sm-4" align=right>
        <%= link_to "Return to article listing", articles_path ,class: 'btn btn-danger btn-lg' %>
     </div>
  </div>
<% end %>