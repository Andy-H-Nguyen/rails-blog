
<h2 align=center>Title: <%= @article.title%></h2>

<div class="well col-xs-8 col-xs-offset-2">
<% if @article.user %>
  <ul class="listing">
    <div class="row">
      <div align="center">
        <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
        <li class = "article-title">
          <%= link_to @article.user.username, user_path(@article.user) %>
        </li>
        <li><small><%= pluralize(@article.user.articles.count,"article") %></small></li>
      </div>
    </div>
  </ul>
<% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr><%= simple_format(@article.description) %>
  <div class="article-actions">
    <div class="row">
      <div class="col-xs-12">
        <div class="col-xs-4">
        <% if logged_in? && current_user == @article.user %>
          <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary"%>
        <% end %>
        </div>
        <div class="col-xs-4" align=center>
        <% if logged_in? && current_user == @article.user %>
          <%= link_to "Delete this article", article_path(@article), 
          method: :delete, 
          data: { confirm: "Are you sure?" }, 
          class: "btn btn-xs btn-danger" %>
        <% end %>
        </div>
        <div class="col-xs-4" align=right>
          <%= link_to "Back to listing", articles_path, class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>

