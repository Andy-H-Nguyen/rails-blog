<% if @article.errors.any? %>
<h3>The following error prevented the article from being created</h3>
<ul>
   <% @article.errors.full_messages.each do |msg| %>
   <li><%= msg %></li>
   <% end %>
</ul>
<% end %>
<div class='row'>
   <div class='col-md-12'>
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class='form-group'>
         <div class='control-label col-sm-2'>
            <%= f.label :title %>
         </div>
         <div class ="col-sm-8">
            <p>
               <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
            </p>
         </div>
      </div>
      <div class='form-group'>
         <div class='control-label col-sm-2'>
            <%= f.label :description %>
         </div>
         <div class ="col-sm-8">
            <p>
               <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description", autofocus: true %>
            </p>
         </div>
      </div>
      <div class="form-group">
         <div class="col-sm-offset-2 col-sm-4" align=left>
            <p><%= f.submit class: 'btn btn-primary btn-lg' %></p>
         </div>
         <div class="col-sm-4" align=right>
            <%= link_to "Return to article listing", articles_path ,class: 'btn btn-primary btn-lg' %>
         </div>
      </div>
   </div>
</div>
<% end %>